<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF2F3"
    android:orientation="vertical"
    tools:context=".WriteActivity">

    <include
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--
    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[ 🧙‍♂ 글쓰기 🤳 ]"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/textViewWrite2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="아이디     : "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/editTextWrite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="false"
            android:ems="10"
            android:hint="아이디 입력"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/textViewWrite1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="작성자     : "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/editTextWrite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="이름 입력"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/textViewWrite3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="글 비밀번호 : "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/editTextWrite3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 선택 💓"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextWrite4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="제목"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWriteImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/insert_pic1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="이미지 추가" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImg2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWriteImage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/insert_pic2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="이미지 추가" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImg3"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWriteImage3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/insert_pic1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="이미지 추가" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImg4"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWriteImage4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/insert_pic2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="이미지 추가" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImg5"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWriteImage5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/insert_pic1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="이미지 추가" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/editTextWrite5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="start|top"
        android:hint="작성하실 내용을 입력해주세요."
        android:inputType="textMultiLine"
        android:paddingLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonWrite"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#FFEBEC"
            android:text="작성" />

        <Button
            android:id="@+id/buttonWriteCancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#FFEBEC"
            android:text="취소" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFEBEC">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_button" />

        <ImageButton
            android:id="@+id/btnWrite"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_button2" />

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="47dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/btnMypage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fav_button" />

        <ImageButton
            android:id="@+id/btnMypage"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mypage_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

