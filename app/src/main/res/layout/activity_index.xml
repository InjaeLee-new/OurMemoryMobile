<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF2F3"
    android:backgroundTint="#FBF2F3"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".IndexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="184dp">

            <Button
                android:id="@+id/buttonTravel"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/airplane_button"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonArt"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/art_button"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toEndOf="@+id/buttonTravel"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonIt"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/it_button"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonPet"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonPet"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/pet_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <Button
                android:id="@+id/buttonHealth"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/health_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonMusic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/music_button"
                app:layout_constraintStart_toEndOf="@+id/buttonHealth"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonFood"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/food_button"
                app:layout_constraintEnd_toStartOf="@+id/buttonGame"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonGame"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/game_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonTotal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/total_button" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="모아보기"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>

        <include layout="@layout/menu_footer" />

    </LinearLayout>


</LinearLayout>