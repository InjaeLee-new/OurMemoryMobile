<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF2F3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".IndexActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리 목록"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTravel"
            android:layout_width="108dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/airplane_button" />

        <Button
            android:id="@+id/buttonArt"
            android:layout_width="126dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/art_button" />

        <Button
            android:id="@+id/buttonIt"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/it_button" />

        <Button
            android:id="@+id/buttonPet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/pet_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonHealth"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/health_button" />

        <Button
            android:id="@+id/buttonMusic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/music_button" />

        <Button
            android:id="@+id/buttonFood"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/food_button" />

        <Button
            android:id="@+id/buttonGame"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/game_button" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonTotal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/total_button" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모아보기"
        android:textAlignment="center" />

</LinearLayout>