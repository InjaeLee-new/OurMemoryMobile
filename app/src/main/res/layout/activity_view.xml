<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF2F3"
    android:orientation="vertical"
    tools:context=".ViewActivity">

    <include
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:text="TextView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/buttonModify"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="#FFEBEC"
                        android:shadowColor="#FFFFFF"
                        android:text="수정"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/buttonDelete"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="#FFEBEC"
                        android:text="삭제"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButtonPre"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:background="#FFFFFF"
                            android:backgroundTint="#FBF2F3"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/back2" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPager"
                            android:layout_width="300dp"
                            android:layout_height="300dp">

                        </androidx.viewpager2.widget.ViewPager2>

                        <ImageButton
                            android:id="@+id/imageButtonNext"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:background="#FFFFFF"
                            android:backgroundTint="#FBF2F3"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/next2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp">

                        <ImageButton
                            android:id="@+id/imageButtonLike"
                            android:layout_width="30dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="#FBF2F3"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_favorite" />

                        <ImageButton
                            android:id="@+id/imageButtonDis"
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="10dp"
                            android:background="#FBF2F3"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/dislike_bold" />

                        <ImageButton
                            android:id="@+id/imageButtonComm"
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="10dp"
                            android:background="#FBF2F3"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/speech_bold" />

                        <Button
                            android:id="@+id/buttonShare"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/share" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="TextView"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="TextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="10dp"
                            android:text="TextView"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="댓글창"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이름 :" />

                    <EditText
                        android:id="@+id/editTextCommentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="사용할 이름을 입력해주세요."
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/buttonCommentSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="댓글쓰기" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextCommentContent"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="댓글을 작성해주세요."
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="318dp"
                android:layout_weight="2">

            </ListView>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFEBEC">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_button" />

        <ImageButton
            android:id="@+id/btnWrite"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_button" />

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="47dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/btnMypage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fav_button" />

        <ImageButton
            android:id="@+id/btnMypage"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFEBEC"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mypage_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
     <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리스트로 돌아가기" />
    -->


</LinearLayout>